<mvc:View controllerName="tobiasmareco.form.controller.View"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
>
    <Page id="page" title="{i18n>title}">
        <content>
            <f:Form
                id="formRegister"
                title=""
                editable="true">

                <f:layout>
                    <f:ResponsiveGridLayout id="lResponsive" />
                </f:layout>
                <f:formContainers>

                    <f:FormContainer id="fcPersonalInformation" title="{i18n>titlePersonalInf}">

                        <f:FormElement id="idId">
                            <Label id="lbId" text="{i18n>textId}" required="true" />
                            <Input id="inputId" value="" required="true"></Input>
                        </f:FormElement>

                        <f:FormElement id="idTypeDocument">
                            <Label id="idTypeDoc" text="{i18n>textTypeDoc}" required="true" />
                            <Select id="inputTypeDoc" selectedKey="" forceSelection="true"
                                items="{typeDocument/>documents}" required="true">
                                <items>
                                    <core:Item id="slItemTypeDoc" key="{}" text="{}" />
                                </items>
                            </Select>
                        </f:FormElement>

                        <f:FormElement id="idNumerDoc">
                            <Label id="NumerDoc" text="{i18n>textNumerDoc}" required="true" />
                            <Input id="inputNumerDoc" value="" required="true"></Input>
                        </f:FormElement>

                        <f:FormElement id="idFirstName">
                            <Label id="lbFirstName" text="{i18n>textFirstName}" required="true" />
                            <Input id="inputFirstName" value="" required="true"></Input>
                        </f:FormElement>

                        <f:FormElement id="idLastName">
                            <Label id="lbLastName" text="{i18n>textLastName}" required="true" />
                            <Input id="inputLastName" value="" required="true"></Input>
                        </f:FormElement>

                        <f:FormElement id="idDateBirth">
                            <Label id="lbDateBirth" text="{i18n>textDateBirth}" required="true" />
                            <DatePicker id="dpDateBirth" displayFormat="dd/MM/yyyy"
                                placeholder="select date" value="formData>/BirthDate" width="80%" />
                        </f:FormElement>

                    </f:FormContainer>

                    <f:FormContainer id="fcOtherInformation" title="{i18n>titleOtherInf}">

                        <f:FormElement id="idPlaceBirth">
                            <Label id="lbPlaceBirth" text="{i18n>textPlaceBirth}" required="true" />
                            <Select id="slPlaceBirth" selectedKey="" forceSelection="true"
                                items="{typeDocument/>documents}" required="true">
                                <items>
                                    <core:Item id="sliPlaceBirth" key="{}" text="{}" />
                                </items>
                            </Select>
                        </f:FormElement>

                        <f:FormElement id="idNationality">
                            <Label id="lbNationality" text="{i18n>textNacionality}" required="true" />
                            <Select id="slNationality" selectedKey="" forceSelection="true"
                                items="{typeDocument/>documents}" required="true">
                                <items>
                                    <core:Item id="sliNationality" key="{}" text="{}" />
                                </items>
                            </Select>
                        </f:FormElement>

                        <f:FormElement id="idGenre">
                            <Label id="lbGenre" text="{i18n>textGenre}" required="true" />
                            <Select id="slGenre" selectedKey="" forceSelection="true"
                                items="{typeDocument/>documents}" required="true">
                                <items>
                                    <core:Item id="sliGenre" key="{}" text="{}" />
                                </items>
                            </Select>
                        </f:FormElement>

                        <f:FormElement id="idCivilStatus">
                            <Label id="lbCivilStatus" text="{i18n>textCivilStatus}" required="true" />
                            <Select id="slCivilStatus" selectedKey="" forceSelection="true"
                                items="{typeDocument/>documents}" required="true">
                                <items>
                                    <core:Item id="sliCivilStatus" key="{}" text="{}" />
                                </items>
                            </Select>
                        </f:FormElement>

                    </f:FormContainer>

                    <f:FormContainer id="fcAddressInformation" title="{i18n>titleAddressInf}">

                        <f:FormElement id="idCountry">
                            <Label id="lbCountry" text="{i18n>textCountry}" required="true" />
                            <Select id="slCountry" selectedKey="" forceSelection="true"
                                items="{typeDocument/>documents}" required="true">
                                <items>
                                    <core:Item id="sliCountry" key="{}" text="{}" />
                                </items>
                            </Select>
                        </f:FormElement>

                        <f:FormElement id="idProvince">
                            <Label id="lbProvince" text="{i18n>textProvince}" required="true" />
                            <Select id="slProvince" selectedKey="" forceSelection="true"
                                items="{typeDocument/>documents}" required="true">
                                <items>
                                    <core:Item id="sliProvince" key="{}" text="{}" />
                                </items>
                            </Select>
                        </f:FormElement>

                        <f:FormElement id="idRegion">
                            <Label id="lbRegion" text="{i18n>textRegion}" required="true" />
                            <Select id="slRegion" selectedKey="" forceSelection="true"
                                items="{typeDocument/>documents}" required="true">
                                <items>
                                    <core:Item id="sliRegion" key="{}" text="{}" />
                                </items>
                            </Select>
                        </f:FormElement>

                        <f:FormElement id="idAddress">
                            <Label id="lbAddress" text="{i18n>textAddress}" required="true" />
                            <Input id="inputAddress" value="" required="true"/>
                        </f:FormElement>

                        <f:FormElement id="idPostalCode">
                            <Label id="lbPostalCode" text="{i18n>textPostalCode}" required="true" />
                            <Input id="inputPostalCode" value="" required="true"/>
                        </f:FormElement>

                    </f:FormContainer>

                    <f:FormContainer id="fcContactInformation" title="{i18n>titleContactInf}">

                    <f:FormElement id="idPhoneNumber">
                        <Label id="lbPhoneNumber" text="{i18n>textPhoneNumber}" required="true" />
                        <Input id="inputPhoneNumber" value="" required="true"/>
                    </f:FormElement>

                    <f:FormElement id="idEmail">
                        <Label id="lbEmail" text="{i18n>textEmail}" required="true" />
                        <Input id="inputEmail" value="" required="true"/>
                    </f:FormElement>

                </f:FormContainer>

                </f:formContainers>

            </f:Form>
        </content>
    </Page>
</mvc:View>