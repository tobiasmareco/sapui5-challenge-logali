<mvc:View controllerName="tobiasmareco.form.controller.View"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
>
    <Page id="page" title="{i18n>title}">
        <content>
            <f:Form
                id="formRegister"
                title=""
                editable="true">
                <f:layout>
                    <f:ResponsiveGridLayout id="lResponsive" />
                </f:layout>
                <f:formContainers>
                    <!-- FORM CONTAINER - PERSONAL INFORMATION -->
                    <f:FormContainer id="fcPersonalInformation" title="{i18n>titlePersonalInf}">

                        <f:FormElement id="idId">
                            <Label id="lbId" text="{i18n>textId}" required="true" />
                            <Input id="inputId" value="{formDataRegister>/Id}" required="true"></Input>
                        </f:FormElement>

                        <f:FormElement id="idTypeDocument">
                            <Label id="idTypeDoc" text="{i18n>textTypeDoc}" required="true" />
                            <Select id="inputTypeDoc"
                                selectedKey="{formDataRegister>/TypeDoc}"
                                forceSelection="true"
                                items="{mDocumentType>/TypeDocuments}" required="true">
                                <items>
                                    <core:Item id="slItemTypeDoc" key="{mDocumentType>key}"
                                        text="{mDocumentType>Text}" />
                                </items>
                            </Select>
                        </f:FormElement>

                        <f:FormElement id="idNumerDoc">
                            <Label id="NumerDoc" text="{i18n>textNumerDoc}" required="true" />
                            <Input id="inputNumerDoc" value="{formDataRegister>/NumDoc}"
                                required="true"></Input>
                        </f:FormElement>

                        <f:FormElement id="idFirstName">
                            <Label id="lbFirstName" text="{i18n>textFirstName}" required="true" />
                            <Input id="inputFirstName" value="{formDataRegister>/FirstName}"
                                required="true"></Input>
                        </f:FormElement>

                        <f:FormElement id="idLastName">
                            <Label id="lbLastName" text="{i18n>textLastName}" required="true" />
                            <Input id="inputLastName" value="{formDataRegister>/LastName}"
                                required="true"></Input>
                        </f:FormElement>

                        <f:FormElement id="idDateBirth">
                            <Label id="lbDateBirth" text="{i18n>textDateBirth}" required="true" />
                            <DatePicker id="dpDateBirth" displayFormat="dd/MM/yyyy"
                                placeholder="select date" value="{formDataRegister>/BirthDate}"
                                width="90%" />
                        </f:FormElement>

                    </f:FormContainer>
                    <!-- FORM CONTAINER - OTHER INFORMATION -->
                    <f:FormContainer id="fcOtherInformation" title="{i18n>titleOtherInf}">

                        <f:FormElement id="idNationality">
                            <Label id="lbNationality" text="{i18n>textNacionality}" required="true" />
                            <Select id="slNationality"
                                selectedKey="{formDataRegister>/Nationality}"
                                forceSelection="true"
                                items="{mCountries>/Nations}"
                                required="true"
                                change="onChangeSelectNationality"
                            >
                                <items>
                                    <core:Item id="sliNationality" key="{mCountries>key}"
                                        text="{mCountries>Text}" />
                                </items>
                            </Select>
                        </f:FormElement>

                        <f:FormElement id="idPlaceBirth">
                            <Label id="lbPlaceBirth" text="{i18n>textPlaceBirth}" required="true" />
                            <Select id="slPlaceBirth" selectedKey="{formDataRegister>/PlaceBirth}"
                                forceSelection="true"
                                items="{mPlaceBirth>/Provinces}" required="true">
                                <items>
                                    <core:Item id="sliPlaceBirth" key="{mPlaceBirth>key}"
                                        text="{mPlaceBirth>Text}" />
                                </items>
                            </Select>
                        </f:FormElement>

                        <f:FormElement id="idGenre">
                            <Label id="lbGenre" text="{i18n>textGenre}" required="true" />
                            <Select id="slGenre" selectedKey="{formDataRegister>/Genre}"
                                forceSelection="true"
                                items="{mGenres>/Genres}" required="true">
                                <items>
                                    <core:Item id="sliGenre" key="{mGenres>key}"
                                        text="{mGenres>Text}" />
                                </items>
                            </Select>
                        </f:FormElement>

                        <f:FormElement id="idCivilStatus">
                            <Label id="lbCivilStatus" text="{i18n>textCivilStatus}" required="true" />
                            <Select id="slCivilStatus" selectedKey="formDataRegister>/CivilStatus"
                                forceSelection="true"
                                items="{mCivilStatus>/CivilStatusList}" required="true">
                                <items>
                                    <core:Item id="sliCivilStatus" key="{mCivilStatus>key}"
                                        text="{mCivilStatus>Text}" />
                                </items>
                            </Select>
                        </f:FormElement>

                    </f:FormContainer>
                    <!-- FORM CONTAINER - ADDRESS INFORMATION -->
                    <f:FormContainer id="fcAddressInformation" title="{i18n>titleAddressInf}">

                        <f:FormElement id="idCountry">
                            <Label id="lbCountry" text="{i18n>textCountry}" required="true" />
                            <Select id="slCountry" selectedKey="{formDataRegister>/Country}"
                                forceSelection="true"
                                items="{mCountries>/Nations}"
                                required="true"
                                change="onChangeSelectCountry"
                            >
                                <items>
                                    <core:Item id="sliCountry"
                                        key="{mCountries>key}"
                                        text="{mCountries>Text}" />
                                </items>
                            </Select>
                        </f:FormElement>

                        <f:FormElement id="idProvince">
                            <Label id="lbProvince" text="{i18n>textProvince}" required="true" />
                            <Select id="slProvince" selectedKey="{formDataRegister>/Province}"
                                forceSelection="true"
                                items="{mAddress>/Provinces}" required="true">
                                <items>
                                    <core:Item id="sliProvince" key="{mAddress>key}"
                                        text="{mAddress>Text}" />
                                </items>
                            </Select>
                        </f:FormElement>

                        <f:FormElement id="idRegion">
                            <Label id="lbRegion" text="{i18n>textRegion}" required="true" />
                            <Select id="slRegion" selectedKey="" forceSelection="true"
                                items="{mAddress>/Regions}" required="true">
                                <items>
                                    <core:Item id="sliRegion"
                                        key="{mAddress>key}"
                                        text="{mAddress>Text}" />
                                </items>
                            </Select>
                        </f:FormElement>

                        <f:FormElement id="idAddress">
                            <Label id="lbAddress" text="{i18n>textAddress}" required="true" />
                            <Input id="inputAddress" value="{formDataRegister>/Address}"
                                required="true" />
                        </f:FormElement>

                        <f:FormElement id="idPostalCode">
                            <Label id="lbPostalCode" text="{i18n>textPostalCode}" required="true" />
                            <Input id="inputPostalCode" value="{formDataRegister>/PostalCode}"
                                required="true" />
                        </f:FormElement>

                    </f:FormContainer>
                    <!-- FORM CONTAINER - CONTACT INFORMATION -->
                    <f:FormContainer id="fcContactInformation" title="{i18n>titleContactInf}">

                        <f:FormElement id="idPhoneNumber">
                            <Label id="lbPhoneNumber" text="{i18n>textPhoneNumber}" required="true" />
                            <Input id="inputPhoneNumber" value="{formDataRegister>/PhoneNumber}"
                                required="true" />
                        </f:FormElement>

                        <f:FormElement id="idEmail">
                            <Label id="lbEmail" text="{i18n>textEmail}" required="true" />
                            <Input id="inputEmail" value="{formDataRegister>/Email}" required="true" />
                        </f:FormElement>

                    </f:FormContainer>

                </f:formContainers>
            </f:Form>
            <Panel id="idPanelList">
                <content>
                    <Table id="idTableListOfUsers" items="{oDataSimulator>/users}">
                        <headerToolbar>
                            <Toolbar id="t" class="tableHeaderWhite">
                                <Title id="tableTitle"
                                    text="test"
                                />
                            </Toolbar>
                        </headerToolbar>
                        <columns>
                            <Column id="idNumDoc">
                                <Text id="textNumDoc" text="{i18n>textNumerDoc}" />
                            </Column>
                            <Column id="idFullName">
                                <Text id="textFullName" text="{i18n>textFullName}" />
                            </Column>
                            <Column id="idBirthDate">
                                <Text id="textBirthDate" text="{i18n>textDateBirth}" />
                            </Column>
                            <Column id="idBirthPlace">
                                <Text id="textPlaceBirth" text="{i18n>textPlaceBirth}" />
                            </Column>
                            <Column id="idNationalityColum">
                                <Text id="textNationality" text="{i18n>textNacionality}" />
                            </Column>
                            <Column id="idGender">
                                <Text id="textGender" text="{i18n>textGenre}" />
                            </Column>
                            <Column id="idCivilStatusColumn">
                                <Text id="textCivilStatus" text="{i18n>textCivilStatus}" />
                            </Column>
                        </columns>

                        <items>
                            <ColumnListItem id="cliItem" type="Navigation">
                                <cells>
                                    <Text id="idDocNumCell" text="{oDataSimulator>NumDoc}" />
                                    <Text id="idFullNameCell" text="{oDataSimulator>Id}" />
                                    <Text id="idBithDateCell" text="{oDataSimulator>BirthDate}" />
                                    <Text id="idPlaceBirthCell" text="{oDataSimulator>PlaceBirth}" />
                                    <Text id="idNationalityCell" text="{oDataSimulator>Nationality}" />
                                    <Text id="idGenreCell" text="{oDataSimulator>Genre}" />
                                    <Text id="idEmailCell" text="{oDataSimulator>Email}" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </content>
            </Panel>
        </content>
        <footer>
            <OverflowToolbar id="idOverflowToolBar">
                <ToolbarSpacer id="idToolbarSpacer"></ToolbarSpacer>
                <Button id="btSave" text="{i18n>textSave}" type="Success" press="saveDataRegister" />
                <Button id="btClear" text="{i18n>textClear}" type="Reject" press="clearDataRegister" />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>